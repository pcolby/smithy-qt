extends: default

ignore: /doc/doxygen-awesome-css

rules:
  braces:
    max-spaces-inside: 1
    min-spaces-inside: 1
  brackets:
    max-spaces-inside: 1
    min-spaces-inside: 1
  commas:
    max-spaces-after: -1
  comments:
    min-spaces-from-content: 1
  document-start: disable
  indentation:
    check-multi-line-strings: false
    indent-sequences: true
    spaces: 2
  line-length:
    max: 120
  truthy:
    check-keys: false
